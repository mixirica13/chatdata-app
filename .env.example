# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Meta/Facebook App Configuration
# Get these from https://developers.facebook.com/apps/
VITE_META_APP_ID=your_facebook_app_id
VITE_META_APP_SECRET=your_facebook_app_secret
VITE_META_API_VERSION=v24.0

# Meta App Configuration for OAuth
# Production URL (update to your domain)
# For local development, use: http://localhost:5173/connect/meta
VITE_META_REDIRECT_URI=https://chatdata.pro/connect/meta

# Meta Permissions (for Facebook Login)
# These are the permissions needed for ads management
VITE_META_PERMISSIONS=ads_management,ads_read,business_management,pages_read_engagement

# Facebook Login for Business Configuration ID
# Get this from Meta for Developers > Your App > Use Cases > Authentication and Account Creation > Facebook Login for Business > Create Configuration
VITE_META_CONFIG_ID=your_facebook_config_id

# PostHog Configuration (Product Analytics)
# Get your API key from: https://app.posthog.com/project/settings
# Free tier: 1M events/month - works in localhost for testing
VITE_POSTHOG_KEY=your_posthog_project_api_key
VITE_POSTHOG_HOST=https://app.posthog.com
