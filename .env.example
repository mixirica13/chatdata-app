# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Meta/Facebook App Configuration
# Get these from https://developers.facebook.com/apps/
VITE_META_APP_ID=your_facebook_app_id
VITE_META_APP_SECRET=your_facebook_app_secret
VITE_META_API_VERSION=v24.0

# Meta App Configuration for OAuth
# This should be your production URL or localhost for development
VITE_META_REDIRECT_URI=http://localhost:5173/connect/meta

# Meta Permissions (for Facebook Login)
# These are the permissions needed for ads management
VITE_META_PERMISSIONS=ads_management,ads_read,business_management,pages_read_engagement
